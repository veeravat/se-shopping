<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SE Shopping</title>
    @Styles.Render("~/Content/css")
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:200,300,400,400i,500,600,700" rel="stylesheet">

    @RenderSection("excss", required: false)
</head>
<body data-smooth-scroll-offset="77">

    <div class="nav-container">
        <div>
            <div class="bar bar--sm visible-xs" data-scroll-class="100px:pos-fixed">
                <div class="container">
                    <div class="row">
                        <div class="col-3 col-md-2">
                            <a href="/"> <img class="logo logo-dark" alt="logo" src="/img/logo-dark.png"> <img class="logo logo-light" alt="logo" src="/img/logo-light.png"> </a>
                        </div>
                        <div class="col-9 col-md-10 text-right">
                            <a href="#" class="hamburger-toggle" data-toggle-class="#menu2;hidden-xs hidden-sm"> <i class="icon icon--sm stack-interface stack-menu"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
            <nav id="menu2" class="bar bar-2 hidden-xs bar--absolute @RenderSection("NavClass", required: false)" data-scroll-class="100px:pos-fixed">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-2 text-center text-left-sm hidden-xs order-lg-2">
                            <div class="bar__module">
                                <a href="/"> <img class="logo logo-dark" alt="logo" src="/img/logo-dark.png"> <img class="logo logo-light" alt="logo" src="/img/logo-light.png"> </a>
                            </div>
                        </div>
                        <div class="col-lg-5 order-lg-1">
                            <div class="bar__module">
                                <ul class="menu-horizontal text-left">
                                    <li>
                                        <a href="/">
                                            Home
                                        </a>
                                    </li>
                                    <li class="dropdown">
                                        <span class="dropdown__trigger">
                                            Category
                                        </span>
                                        <div class="dropdown__container">
                                            <div class="container">
                                                <div class="row">
                                                    <div class="dropdown__content col-lg-2">
                                                        <ul class="menu-vertical">
                                                            <li> <a href="#">Mobile</a> </li>
                                                            <li> <a href="#">PC</a> </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-lg-5 text-right text-left-xs text-left-sm order-lg-3">
                            <div class="bar__module">

                                @{
                                    SESHOP_Shop_member member = ViewData["UserProfile"] as SESHOP_Shop_member;
                                    if (member != null)
                                    {
                                        <ul class="menu-horizontal text-left">
                                            <li class="dropdown">
                                                <span class="dropdown__trigger">
                                                    <span class="btn__text ">
                                                        @member.memberName
                                                    </span>
                                                </span>
                                                <div class="dropdown__container">
                                                    <div class="container">
                                                        <div class="row">
                                                            <div class="dropdown__content col-lg-2">
                                                                <ul class="menu-vertical">
                                                                    <li> <a href="/cart">Cart</a> </li>
                                                                    <li> <a href="/logout">Logout</a> </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    }
                                    else
                                    {
                                        <a class="btn btn--sm type--uppercase btn--primary" href="/login">
                                            <span class="btn__text ">
                                                Login
                                            </span>
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="main-container">
        @RenderBody()
        <footer class="footer-7 text-center-xs">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <span class="type--fine-print">© <span class="update-year"></span> TuyMove — All Rights Reserved</span>
                    </div>
                    <div class="col-sm-6 text-right text-center-xs">
                        <ul class="social-list list-inline">
                            <li><a href="#"><i class="socicon socicon-google icon icon--xs"></i></a></li>
                            <li><a href="#"><i class="socicon socicon-twitter icon icon--xs"></i></a></li>
                            <li><a href="#"><i class="socicon socicon-facebook icon icon--xs"></i></a></li>
                            <li><a href="#"><i class="socicon socicon-instagram icon icon--xs"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/stack")
    @RenderSection("scripts", required: false)
</body>
</html>
